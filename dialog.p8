version 42
__lua__
cfg = {
	mar = 2
}
mess=[[
let's start with something
simple.
]]

delta=0
last_t=0

text={
	t="",
	t_pos=0,
	delta=0,
	delta1=0,
	update = function()
		text.delta += delta
		text.delta1 += delta
		if (text.delta > 0.05) then
			text.delta = 0
			text.t_pos += 3
			text.t = sub(mess,0,text.t_pos)
--			sfx(0)
		end
		if (text.delta1 > 2) then
			sfx(-2`)
		end
		

	end,
	print = function()
		print(text.t, 2 * cfg.mar + 16, cfg.mar, 10)
	end
}

function _update()
	delta=time()-last_t
	last_t=time()
	text.update()
end

function _draw()
	cls(1)
	spr(0, cfg.mar, cfg.mar, 2, 2)
	rect(2 * cfg.mar + 16, cfg.mar, 127 - cfg.mar, 64 - cfg.mar, 3)
	spr(0, 128 - cfg.mar - 16, 63 + cfg.mar, 2, 2)
	rect(cfg.mar, 63 + cfg.mar, 127 - cfg.mar * 2 - 16, 128 - cfg.mar, 3)
	text.print()
end
